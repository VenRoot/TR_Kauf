{
  "extends": [
    "airbnb",
    "eslint:recommended"
  ],
  "globals": {
    "___approot": false
  },
  "rules": {
    "linebreak-style": [
      "error",
      "windows"
    ],
    "padded-blocks": [
      "error",
      {
        "classes": "always"
      }
    ],
    "camelcase": [
      "error",
      {
        "properties": "always"
      }
    ],
    "eqeqeq": [
      "error",
      "smart"
    ],
    "indent": [
      "error",
      2,
      {
        "MemberExpression": 0
      }
    ],
    "max-len": [
      "error",
      250
    ],
    "new-cap": "error",
    "no-undef": [
      "error",
      {
        "typeof": true
      }
    ],
    "quotes": [
      "error",
      "single"
    ],
    "no-unused-vars": "error",
    "no-loop-func": "warn",
    "accessor-pairs": [
      "error",
      {
        "setWithoutGet": true
      }
    ],
    "dot-notation": [
      "error",
      {
        "allowPattern": "^[a-z]+(_[a-z]+)+$|^[a-z]+(-[a-z]+)+$"
      }
    ],
    "semi": [
      "error",
      "always",
      {
        "omitLastInOneLineBlock": true
      }
    ],
    "semi-style": [
      "error",
      "last"
    ],
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": true,
        "optionalDependencies": false,
        "peerDependencies": false
      }
    ],
    "default-case": "error",
    "prefer-spread": "error",
    "no-extra-semi": "error",
    "consistent-return": "off",
    "import/prefer-default-export": "off",
    "import/extensions": "off",
    "class-methods-use-this": "off",
    "no-underscore-dangle": "off",
    "complexity": "off",
    "prefer-template": "off",
    "spaced-comment": "off",
    "no-console": "off",
    "lines-around-directive": "off",
    "prefer-const": "off",
    "no-restricted-syntax": "off",
    "strict": "off",
    "curly": "off"
  }
}
